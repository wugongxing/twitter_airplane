{
    "manifest_version": 3,
    "name": "Flying Plane on Twitter",
    "version": "1.0",
    "description": "A simple game to fly a plane on Twitter pages.",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*.twitter.com/*"],
        "js": ["plane.js"],
        "css": ["plane.css","styles.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["fly1.png","plane.gif","plane2.png"],
        "matches": ["*://*.twitter.com/*"]
      }
    ],
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
  }